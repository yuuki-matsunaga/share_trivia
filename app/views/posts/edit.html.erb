<div class="container p-5">
  <h4>雑学編集ページ</h4>
  <div class="text-danger">
    <% if @post.errors.any? %>
      <%= @post.errors.count %>件のエラーが発生しました
      <% @post.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </div>
  <div class="row p-5">
    <div class="col">
      <%= form_with model: @post,url: post_path, local:true do |f| %>
        <label for="title" class="co-2 col-form-label">タイトル</label>
        <%= f.text_field :title, placeholder:"タイトル", class:"col-8 form-control" %>
        <label for="introduction" class="co-2 col-form-label">内容</label>
        <%= f.text_area :introduction,rows: 5, placeholder:"雑学の内容を入力してください", class:"col-8 form-control rows-10" %>
        <label for="image" class="co-2 col-form-label">イメージ画像</label>
        <%= f.attachment_field :image, placeholder: "イメージ画像" %><br>
        <label for="genre" class="co-2 col-form-label">ジャンル</label>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, class:"btn btn-info form-control", prompt: "--選択してください--" %><br>
        <p>ジャンルが無い場合はこちら<%= link_to "ジャンル一覧",genres_path %></p>
        <%= f.submit '更新',class:"btn btn-outline-success form-control col-8" %>
      <% end %>
    </div>
  </div>
</div>