<div class="container p-5">
  <h4>ユーザー編集ページ</h4>
  <div class="row p-5">
    <div class="col">
      <form>
        <%= form_with model: @user, url: user_path,local:true do |f| %>
          <label>プロフィール画像</label><br>
          <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg"%><br>
          <%= f.attachment_field :image, placeholder: "プロフィール画像" %><br>
          <p></p>
          <label>ユーザー名</label>
          <%= f.text_field :name, placeholder:"名前", class:"col-8 form-control" %><br>
          <label>自己紹介文</label>
          <%= f.text_area :comment,rows: 5, placeholder:"よろしくお願いします！！",class:"col-8 form-control rows-10" %><br>
          <%= f.submit "変更を保存",class:"btn btn-outline-success btn-lg col-8" %>
          <%= link_to "退会する",users_confirm_path,class:"btn btn-outline-danger ml-5" %><br>
        <% end %>
      </form>
    </div>
  </div>
</div>