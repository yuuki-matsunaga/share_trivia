<div class="container p-5">
  <h4>ユーザー編集ページ</h4>
  <div class="text-danger">
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </div>
  <div class="row mx-auto">
    <div class="col">
      <%= form_with model: @user, url: user_path,local:true do |f| %>
        <label>プロフィール画像</label><br>
        <%= attachment_image_tag @user, :image, :fill, 36, 36, class:"rounded-circle",fallback: "no_image.jpg" %><br>
        <%= f.attachment_field :image, placeholder: "プロフィール画像" %><br>
        <p></p>
        <label>ユーザー名</label>
        <%= f.text_field :name, placeholder:"名前", class:"col-lg-8 form-control" %><br>
        <label>自己紹介文</label>
        <%= f.text_area :comment,rows: 5, placeholder:"よろしくお願いします！！",class:"col-lg-8 form-control rows-10" %><br>
        <%= f.submit "変更を保存",class:"btn btn-outline-success btn-lg" %>
        <%= link_to "退会する",users_confirm_path,class:"btn btn-outline-danger" %><br>
      <% end %>
    </div>
  </div>
</div>